@import '~@/assets/stylesheets/colorset/index.styl'

// stateful ////////////////////////////////////////////////////////////////////////////////////////////////////////

// basic ///////////////////////////////////////////////////////////////////////////////////////////////////////////
#login.view
    display: flex
    align-items: center
    justify-content: center
    // position: fixed
    // width: 100vw
    // height: 100vh
    // background-color: white

    >.login.panel
        position: relative
        width: 600px
        background-color: $black05
        padding: 50px

        input
            margin-bottom: 15px
        
        >.button.home
            display flex
            align-items: center
            justify-content: center
            position absolute
            top 0px
            left 0px
            width 50px
            height 50px
            
            svg
                width 25px
                height 25px

        >.title
            display: flex
            justify-content: center
            font-size: 32px
            color: $black60
            margin-bottom: 50px

        >.account-operations
        
            >section
                
                >.input
                    margin-bottom: 15px
                
                >.button
                    margin-bottom: 15px
                    width 100%
            
            >section.reset-password

                >.sq-title
                    color $blue60
                
                >.sq-content
                    padding 0px 25px
                    margin-bottom: 15px
        
        >.action
            margin-bottom: 15px
            
            >.button
                width 100%
            
            >.wrapper
                height 40px

                >span
                    display inline-block
                    margin-top 15px
                    color $black60
                    text-decoration underline
                    &:hover
                        cursor pointer
                
                >span.register
                    float left
                
                >span.reset-password
                    float right

        >.server-message
            display: flex
            justify-content: center
            height: 50px
            color: $red60