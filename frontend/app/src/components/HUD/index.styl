@import '~@/assets/stylesheets/colorset/index.styl'

// stateful ////////////////////////////////////////////////////////////////////////////////////////////////////////

// basic ///////////////////////////////////////////////////////////////////////////////////////////////////////////
#hud
    position absolute
    top 0px
    left 0px
    width 100%
    height 100%

    >.top-region
        padding 10px
        color $black60

        >.level-info

            span
                display inline-block
                width 60px
                font-weight bold
        
        .bar.boss-health
            display none
            position absolute
            right 10px
            top 10px
            width 500px

            .content
                position absolute
                right 0px
                background-color $black20
    
    >.side-region
        display none    // !!!
        padding 10px

        .el-progress--circle
            display block
            margin-bottom 5px
    
    >.bottom-region
        position absolute
        bottom 0px
        height 64px
        width 100%

        .bar.player-health
            width 500px
            margin 4px 0px 4px 10px
            border 1px solid $green80
            background-color $green10

            span
                margin-left 5px
            
            .content
                background-color $green50

        .bar.player-energy
            width 500px
            margin 0px 0px 0px 10px
            border 1px solid $blue80
            background-color $blue10

            span
                margin-left 5px
            
            .content
                background-color $blue50

        >.weapon
            position absolute
            right 10px
            bottom 8px

            .img
                width 96px
                height 48px
                background-color $black20
        
        >.inventory
            display flex
            position absolute
            left 8px
            bottom 64px
            flex-wrap wrap
            
            >.slot
                display flex
                align-items center
                justify-content center
                height 34px
                width 34px
                border 1px solid black
                margin-left 2px