@import '~@/assets/stylesheets/colorset/index.styl'

// stateful ////////////////////////////////////////////////////////////////////////////////////////////////////////

// basic ///////////////////////////////////////////////////////////////////////////////////////////////////////////
#loading-assets
    // user-select none
    // pointer-events none
    right 0px
    width 20% !important
    background-color transparent !important
    height 100%
    overflow-y auto

    *
        user-select none
        pointer-events none
    
    >.current-loading
        position absolute
        top 10px
        right 10px
        width 300px
        font-size 13px

        >div
            text-align right
            color $black60
            &:first-child
                color black
                font-weight bold