@import '~@/assets/stylesheets/colorset/index.styl'

// stateful ////////////////////////////////////////////////////////////////////////////////////////////////////////

// basic ///////////////////////////////////////////////////////////////////////////////////////////////////////////
#play
    
    #browse-levels
        border-top 1px solid $black20
        border-bottom 1px solid $black20

        table
            height 495px
            min-height: 495px

        td
            padding 11px
        
        .ant-table-cell
            height 45px

        th, th span
            font-weight: bold
        
        th
            padding 11px

        div.ant-table-column-sorters
            padding 0px
        
        tr.selected
            background-color: $blue20
            &:hover
                
                >*
                    background-color $blue20

    .ant-table-pagination
        margin 10px

    .ant-pagination-options
        display none
    
    .level-selected
        padding: 10px

        span
            color: $blue60

    .description
        position absolute
        bottom 0px
        width 1150px
        height 190px
        border-right 1px solid $black20
        border-top 1px solid $black20
        overflow-y scroll
        padding 10px
    
    .button.play
        position absolute
        right 15px
        bottom 150px
        width 185px